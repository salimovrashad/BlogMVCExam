@using BlogMVC.Models
@model List<Blog>
@{
    ViewData["Title"] = "Index";
}


                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                            <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                <i class="fas fa-download fa-sm text-white-50"></i> Create Blog
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Description</th>
                                            <th colspan="2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Description</td>
                                                <td><a asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a></td>
                                                <td><a asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                            </tr>
                                        }

                                    </tbody>



                                </table>
                            </div>
                        </div>
                    </div>



               